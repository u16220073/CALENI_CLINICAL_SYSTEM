@model IEnumerable<Hospital_Management_System.Controllers.AdminController.AuditDto>

@{
    ViewBag.Title = "ListOfPatients";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <ol class="breadcrumb">
        <li>
            <a href="#">
                <em class="fa fa-home"></em>
            </a>
        </li>
        <li class="active">Audit Log</li>
        <li class="active">List of Audit Logs</li>
    </ol>
</div>

<h2>List Of Audits</h2>

<table id="table_id" class="table">
    <thead>
        <tr>
            <th>
              Date
            </th>
            <th>
               User
            </th>
            <th>
               Transaction
            </th>
            <th>
              Table
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Who)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Transaction)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Table)
            </td>
           
        </tr>
        }
    </tbody>

</table>

@section scripts {
    <script>
        $(document).ready(function () {
            $("#table_id").dataTable();
        });
    </script>
}