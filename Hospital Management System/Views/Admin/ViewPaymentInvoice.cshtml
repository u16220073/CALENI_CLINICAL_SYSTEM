

@model Hospital_Management_System.Models.Payment

@{
    Layout = null;
}

<head>
    <link rel="stylesheet" type="text/css" href="http://yui.yahooapis.com/2.7.0/build/reset-fonts-grids/reset-fonts-grids.css" media="all" />
    <link rel="stylesheet" href="~/Content/resume.css">
</head>
<body>
    
   
    
    <div id="doc2" class="yui-t7">
        <div id="inner">


            <div id="hd">
                <div class="yui-gc">
                    <div class="yui-u first">
                        <h2>Celani clinical Psychologist </h2>
                        <br>
                        <h2>Invoice: @(Model.InvoiceRefNo)</h2>
                        <h3>Contact: @(Model.CentreContact)</h3>
                        <h3>Address: @(Model.CentrLocation)</h3>
                        <h3>Centre Name: @(Model.CenterName)</h3>
                        <h3>Payment Date: @(Model.PaymentDate)</h3>
                    </div>

                    <div class="yui-u">
                        <div class="contact-info">
                        </div><!--// .contact-info -->
                    </div>
                </div><!--// .yui-gc -->
            </div><!--// hd -->

            <div id="bd">
                <div id="yui-main">
                    <div class="yui-b">

                        <div class="yui-gf">
                            <div class="yui-u first">
                                <h2>Psychologist Profile</h2>
                            </div>
                            <div class="yui-u">
                                <p class="enlarge">
                                    Name: @Model.PsychologistName
                                </p>
                                <p class="enlarge">
                                    Specialization: @Model.PsychologistSpecialist
                                </p>
                                <p class="enlarge">
                                    Contact: @Model.PsychologistContact
                                </p>
                            </div>
                        </div>

                        <div class="yui-gf">
                            <div class="yui-u first">
                                <h2>Patient Profile</h2>
                            </div>
                            <div class="yui-u">
                                <p class="enlarge">
                                    Name: @Model.PatientName
                                </p>
                                <p class="enlarge">
                                    Contact No: @Model.PatientNumber
                                </p>
                                <p class="enlarge">
                                    Email Address: @Model.PatientEmail
                                </p>
                                <p class="enlarge">
                                    Address: @Model.PatientAddress
                                </p>
                                <p class="enlarge">
                                    Gender: @Model.PatientGender
                                </p>
                                <p class="enlarge">
                                    DateOfBirth: @Model.DateOfBirth
                                </p>
                            </div>
                        </div>
                        <div class="yui-gf">

                            <div class="yui-u">

                                <div class="yui-gf">
                                    <div class="yui-u first">
                                        <h2>Invoice Details</h2>
                                    </div>
                                    <div class="yui-u">
                                        <p class="enlarge">
                                            Service Recived: @Model.ServiceRecived
                                        </p>
                                        <p class="enlarge">
                                            Hours Of Service: @Model.HoursOfService
                                        </p>

                                        <p class="enlarge">
                                            Service Amount:R @Model.ServiceAmount
                                        </p>
                                        <p class="enlarge">
                                            Paid by Medical Aid: @Model.PaidbyMedicalAid
                                        </p>

                                    </div>
                                </div>

                                <div class="yui-gf last">
                                    <div class="yui-u first">
                                        <h2>Total Amount apaid</h2>
                                    </div>
                                    <div class="yui-u">
                                        <h2>R@(Model.TotalDue)</h2>
                                    </div>
                                </div>


                            </div>

                        </div>
                        <div id="ft">
                            <p>Celani Clinical Psychologist</p>
                        </div>

                        <input type="button" class="btn btn-primary" value="Print Payment Invoice" onclick="window.print()" />
                    </div>

                   

                </div>


            </div>
</body>

<script type="text/javascript">

    function Print() {
        window.print();
    }

</script>

