@model IEnumerable<Hospital_Management_System.Models.Dto.SchedulesDto>

@{
    ViewBag.Title = "ListOfTreatmentPlan";
    Layout = "~/Views/Shared/_PatientLayout.cshtml";
}

<div class="row">
    <ol class="breadcrumb">
        <li>
            <a href="#">
                <em class="fa fa-home"></em>
            </a>
        </li>
        <li class="active">Schedule</li>
        <li class="active">List of Schedules</li>
    </ol>
</div>

<h2>List Of Schedules</h2>

<table id="table_id" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CentreName)
            </th>
            <th>
                Psychologist Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ScheduleDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndTime)
            </th>

      
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CentreName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PsychologistName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ScheduleDate)
            </td>

            <td>
                @item.StartTime.ToShortTimeString()
            </td>
            <td>
                @item.EndTime.ToShortTimeString()
            </td>



        </tr>
        }
    </tbody>

</table>

@section scripts {
    <script>
        $(document).ready(function () {
            $("#table_id").dataTable();
        });
    </script>
}
